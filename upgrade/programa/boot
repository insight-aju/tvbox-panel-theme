#!/data/data/com.termux/files/usr/bin/sh
# Script chamado automaticamente pelo Termux:Boot

# Garante acesso ao armazenamento (só para o caso de no primeiro boot ainda não estar ok)
#termux-setup-storage 2>/dev/null || true

# Vai para a pasta do programa
APP_DIR="$HOME/storage/shared/Android/media/com.termux/programa"
cd "$APP_DIR" || exit 1

# Chama o start.sh real em background
sh ./start.sh &

exit 0
